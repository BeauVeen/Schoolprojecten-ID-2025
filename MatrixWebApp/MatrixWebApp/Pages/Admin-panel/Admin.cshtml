@page
@model MatrixWebApp.Pages.AdminModel
@{
	ViewData["Title"] = "Admin Paneel";
}

<h1>Admin paneel</h1>

<h2>Producten toevoegen</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
	<div>
		<label>Naam:</label>
		<input asp-for="Product.Naam"/>
		<span asp-validation-for="Product.Naam" class="text-danger"></span>
	</div>
	<div>
		<label>Beschrijving:</label>
		<input asp-for="Product.Beschrijving" />
		<span asp-validation-for="Product.Beschrijving" class="text-danger"></span>
	</div>
	<div>
		<label>Categorie:</label>
		<select asp-for="Product.CategorieId" class="form-control">
		@foreach (var cat in Model.Categorieën)
			{
				<option value="@cat.CategorieId">@cat.CategorieNaam</option>
			}
		</select>
		<span asp-validation-for="Product.CategorieId" class="text-danger"></span>
	</div>
	<div>
		<label>Prijs:</label>
		<input asp-for="Product.Prijs" type="number" step="0.01" />
		<span asp-validation-for="Product.Prijs" class="text-danger"></span>
	</div>
	<div>
		<label>Voorraad:</label>
		<input asp-for="Product.Voorraad" type="number"/>
		<span asp-validation-for="Product.Voorraad" class="text-danger"></span>
	</div>
	<button type="submit">Product Toevoegen</button>
</form>

@if (Model.Melding != null)
{
	<p>@Model.Melding</p>
}

<partial name="_ValidationScriptsPartial" />